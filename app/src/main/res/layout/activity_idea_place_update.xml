<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="핫플레이스 업데이트"
        android:textAlignment="center"
        android:textColor="@color/colorPupple"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:layout_marginTop="80dp"
        android:id="@+id/et_update_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_update_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="카테고리"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_update_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="위치"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_update_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이미지 url"
        android:inputType="textUri" />
    <EditText
        android:id="@+id/et_update_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="사이트 링크"
        android:inputType="textUri" />

    -
    <Button
        android:id="@+id/bt_update"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPupple"
        android:text="업데이트"
        android:textSize="24sp" />

</LinearLayout>
